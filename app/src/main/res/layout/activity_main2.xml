<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal|center_vertical"
    android:gravity="center_vertical"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/inputTupe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#A81515"
        android:inputType="text"
        android:text="Hello New Year!"
        android:textAlignment="center"
        android:textColor="#00A851" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#B50000"
        android:inputType="number"
        android:text="2021!"
        android:textAlignment="center"
        android:textColor="#338700" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#C30000"
        android:ems="10"
        android:fontFamily="serif"
        android:hint="Your name"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColorHint="#058A00" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#AC0000"
        android:inputType="phone"
        android:text="Phone"
        android:textAlignment="center"
        android:textColor="#02AF0A" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/textEmailAdress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#CA0303"
        android:inputType="textEmailAddress"
        android:text="Email"
        android:textAlignment="center"
        android:textColor="#00970F" />

    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#000000"
        android:backgroundTint="#C1FBC4"
        android:minDate="01/01/2021"
        android:selectedWeekBackgroundColor="#AA0A0A" />




</LinearLayout>
